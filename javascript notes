//< ---------- less than operators -------- >

function testGreater(val){
  if (val < 1000){
    return "less than 100";
  }
  if(val < 17){
    return "10 or under";
  }
}
console.log(testGreater(10));
console.log(testGreater(6));

//<----------logical opertaion --------->

function test(val){
  if (val <= 50 && val >= 25){
    return "Yes";
  }
  return "No";
}

console.log(test(160));

//<--------- compasrions to logical or operator ------->

function test(val){
  if(val < 10 || val > 20)
  return "Outside";
}
